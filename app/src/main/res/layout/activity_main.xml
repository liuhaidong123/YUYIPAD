<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    tools:context=".activity.Main.MainActivity">
    <RelativeLayout
        android:id="@+id/main_leftLayout"
        android:background="@color/color_homeBackGround"
        android:layout_height="match_parent"
        android:layout_width="100dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!--首页-->
            <RelativeLayout
                android:background="@drawable/home_rela"
                android:layout_marginTop="20dp"
                android:id="@+id/main_HomePage_rela"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <LinearLayout
                    android:layout_centerInParent="true"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/main_HomePage_image"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/home_homepage_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
                        <TextView
                            android:id="@+id/main_HomePage_text"
                            android:layout_marginLeft="10dp"
                            android:layout_gravity="center_vertical"
                            android:text="首页"
                            android:textSize="@dimen/HomeTextSize11"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@drawable/home_text"/>
                </LinearLayout>
            </RelativeLayout>

            <!--测量-->
            <RelativeLayout
                android:background="@drawable/home_rela"
                android:layout_marginTop="20dp"
                android:id="@+id/main_MeasurePage_rela"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <LinearLayout
                    android:layout_centerInParent="true"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/main_MeasurePage_image"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/home_meansure_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
                    <TextView
                        android:id="@+id/main_MeasurePage_text"
                        android:layout_marginLeft="10dp"
                        android:layout_gravity="center_vertical"
                        android:text="测量"
                        android:textSize="@dimen/HomeTextSize11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@drawable/home_text"/>
                </LinearLayout>
            </RelativeLayout>


            <!--咨询-->
            <RelativeLayout
                android:background="@drawable/home_rela"
                android:layout_marginTop="20dp"
                android:id="@+id/main_CounselingPage_rela"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <LinearLayout
                    android:layout_centerInParent="true"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/main_CounselingPage_image"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/home_counseling_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
                    <TextView
                        android:id="@+id/main_CounselingPage_text"
                        android:layout_marginLeft="10dp"
                        android:layout_gravity="center_vertical"
                        android:text="咨询"
                        android:textSize="@dimen/HomeTextSize11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@drawable/home_text"/>
                </LinearLayout>
            </RelativeLayout>


            <!--我的-->
            <RelativeLayout
                android:background="@drawable/home_rela"
                android:layout_marginTop="20dp"
                android:id="@+id/main_MinePage_rela"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <LinearLayout
                    android:layout_centerInParent="true"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/main_MinePage_image"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/home_mine_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
                    <TextView
                        android:id="@+id/main_MinePage_text"
                        android:layout_marginLeft="10dp"
                        android:layout_gravity="center_vertical"
                        android:text="我的"
                        android:textSize="@dimen/HomeTextSize11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@drawable/home_text"/>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_toRightOf="@+id/main_leftLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/main_fragLayout"/>
</RelativeLayout>
