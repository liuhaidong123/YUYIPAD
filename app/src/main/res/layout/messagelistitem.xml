<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:background="@drawable/frag_my_rela"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="120dp">
        <LinearLayout android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="30dp"
            android:paddingRight="20dp"
            android:orientation="horizontal">
            <ImageView
                android:src="@mipmap/msg1"
                android:id="@+id/messageListitem_image"
                android:layout_width="50dp"
                android:layout_height="50dp"/>
            <TextView style="@style/TextS15C3LayoutWrap"
                android:layout_marginLeft="10dp"
                android:text="宇医公告"
                android:id="@+id/messageListitem_title"/>
    </LinearLayout>
    <View android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#e5e5e5"/>
    <RelativeLayout
        android:layout_gravity="center_vertical"
        android:paddingLeft="20dp"
        android:paddingRight="26dp"
        style="@style/layoutWrapContent">
        <RelativeLayout
            android:id="@+id/myLyouat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView style="@style/layoutWrapContent"
                android:textSize="15sp"
                android:layout_centerVertical="true"
                android:id="@+id/messageListitem_time"
                android:layout_alignParentRight="true"
                android:textColor="#888888"
                android:text="12：20"/>
            <TextView
                android:layout_centerVertical="true"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textSize="15sp"
                android:layout_marginRight="15dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_toLeftOf="@+id/messageListitem_time"
                android:id="@+id/messageListitem_info"
                android:textColor="#333333"
                android:text="更新通知"/>
    </RelativeLayout>
        <TextView android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:ellipsize="end"
            android:id="@+id/messageListitem_msg"
            android:textColor="#333333"
            android:textSize="10sp"
            android:layout_marginTop="15dp"
            android:paddingRight="20dp"
            android:text="你好你好你好你好你好你好你好你好你好你好你好你好你好你好你好你好你好你好你好你好你好你好你好你好你好你好你好你好你好你好你好你好你好你好你好你好你好你好你好你好你好你好你好你好你好你好你好你好"
            android:lineSpacingExtra="3dp"
            android:layout_below="@+id/myLyouat"/>
    </RelativeLayout>
    </LinearLayout>
</LinearLayout>