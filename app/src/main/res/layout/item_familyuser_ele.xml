<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/frag_my_rela"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <LinearLayout  android:layout_width="80dp"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="#e5f6fb"
            android:layout_height="match_parent">
            <TextView
                android:textColor="#1ebeec"
                android:textSize="18sp"
                android:gravity="center"
                android:text="2018"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/hospitalTime_year"
               />
            <TextView
                android:textColor="#1ebeec"
                android:textSize="18sp"
                android:gravity="center"
                android:text="10-17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/hospitalTime_month"
                />
            </LinearLayout>

        <RelativeLayout style="@style/layoutmatchparent">
            <TextView style="@style/TextS15C3LayoutWrap"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:id="@+id/hospicalName"
            android:paddingRight="15dp"
                android:text="涿州市中医院"
            android:paddingLeft="15dp"
            />
            <TextView style="@style/TextS15C3LayoutWrap"
                android:layout_width="match_parent"
                android:layout_toLeftOf="@+id/hospicalName"
                android:layout_centerVertical="true"
                android:id="@+id/hospicalKS"
                android:maxLines="1"
                android:text="消化科／张德江"
                android:ellipsize="end"
                android:paddingLeft="15dp"
                />
            </RelativeLayout>

        </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:background="#f1f1f1"
        android:layout_height="1dp"/>
    <TextView android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:paddingRight="17dp"
        android:paddingLeft="17dp"
        android:text="描述"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/textSize15"
        android:id="@+id/hospical_msgInfo"
        android:minHeight="100dp"/>
        <com.technology.yuyipad.Lview.MyGirdView
            android:padding="10dp"
            android:numColumns="3"
            android:verticalSpacing="10dp"
            android:horizontalSpacing="10dp"
            android:id="@+id/myGridView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
</LinearLayout>