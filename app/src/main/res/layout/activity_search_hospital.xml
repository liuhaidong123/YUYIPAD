<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_search_hospital"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    tools:context="com.technology.yuyipad.activity.SearchHospitalActivity">

    <RelativeLayout
        android:id="@+id/search_rl"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/cancel_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:text="取消"
            android:textColor="@color/color_1ebeec" />

        <RelativeLayout
            android:id="@+id/edit_rl"
            android:layout_width="match_parent"
            android:layout_height="29dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:layout_toStartOf="@id/cancel_tv"
            android:background="@drawable/location_search">

            <ImageView
                android:id="@+id/search_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="15dp"
                android:background="@mipmap/search" />

            <EditText
                android:id="@+id/edit_box"
                android:layout_width="match_parent"
                android:layout_height="29dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/search_img"
                android:background="@null"
                android:hint="@string/edit_hint"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/color_333333"
                android:textSize="14sp" />

        </RelativeLayout>

    </RelativeLayout>

    <ListView
        android:id="@+id/search_history_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/search_rl"
        android:layout_marginEnd="25dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        android:divider="@null"
        android:scrollbars="none"
        android:visibility="gone">

    </ListView>

    <TextView
        android:id="@+id/prompt_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/search_rl"
        android:layout_marginEnd="25dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        android:text="抱歉，没有搜索到结果"
        android:textColor="@color/color_1ebeec"
        android:visibility="gone" />


    <ScrollView
        android:id="@+id/hospital_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/search_rl"
        android:layout_marginTop="20dp"
        android:scrollbars="none"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.technology.yuyipad.lhdUtils.InformationListView
                android:id="@+id/hospital_listview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="25dp"
                android:layout_marginStart="25dp"
                android:divider="@null"
                android:scrollbars="none">

            </com.technology.yuyipad.lhdUtils.InformationListView>

            <TextView
                android:id="@+id/clear_hospital_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/hospital_listview"
                android:paddingBottom="30dp"
                android:paddingEnd="25dp"
                android:paddingStart="25dp"
                android:text="清除历史"
                android:textColor="@color/color_1ebeec"
                android:textSize="16sp"
                android:visibility="gone" />
        </RelativeLayout>


    </ScrollView>

</RelativeLayout>
