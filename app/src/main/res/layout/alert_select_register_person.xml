<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="310dp"
        android:background="@color/ffffff">

        <TextView
            android:id="@+id/select_per_tv"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="center"
            android:text="@string/select_patient"
            android:textColor="@color/color_333333"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/cancle_alert_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:src="@mipmap/x" />

        <View
            android:id="@+id/select_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/select_per_tv"
            android:background="@color/fafafa" />

        <GridView
            android:id="@+id/be_select_gridview"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_below="@id/select_line"
            android:gravity="center"
            android:numColumns="2"
            android:padding="10dp">

        </GridView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/be_select_gridview">

            <View

                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/fafafa" />

            <TextView
                android:id="@+id/alert_sure"
                android:layout_width="150dp"
                android:layout_height="44dp"
                android:layout_centerInParent="true"
                android:layout_weight="1"
                android:background="@drawable/sure_bg"
                android:gravity="center"
                android:text="确定"
                android:textColor="@color/color_white"
                android:textSize="17sp" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>