<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!--字体19sp，颜色#fffff（纯白），最大长度5,宽度／高度均为自适应-->
    <style name="TextS19CfM5" parent="@style/layoutWrapContent">
        <item name="android:textSize">@dimen/textSize19</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:maxLength">5</item>
        <item name="android:ellipsize">end</item>
    </style>
    <!--17sp颜色333333宽高度自适应-->
    <style name="TextS17C3Wrap" parent="@style/layoutWrapContent">
        <item name="android:textColor">@color/color_333333</item>
        <item name="android:textSize">@dimen/textSize17</item>
    </style>
    <!--//定义字体19sp，颜色#333333 width=wrapcontent，height=wrapcontent-->
    <style name="TextS19C3" parent="@style/layoutWrapContent">
        <item name="android:textSize">@dimen/textSize19</item>
        <item name="android:textColor">@color/color_333333</item>
    </style>

    <!--//定义字体9sp，颜色#333333 width=wrapcontent，height=wrapcontent-->
    <style name="TextS9C6" parent="@style/layoutWrapContent">
        <item name="android:textSize">@dimen/textSize9</item>
        <item name="android:textColor">@color/color_666666</item>
    </style>
    <!--//定义字体14sp，颜色#333333 width=wrapcontent，height=wrapcontent-->
    <style name="TextS14C3" parent="@style/layoutWrapContent">
        <item name="android:textSize">@dimen/textSize14</item>
        <item name="android:textColor">@color/color_333333</item>
    </style>
    <!--//定义字体10sp，颜色#6a6a6a width=wrapcontent，height=wrapcontent-->
    <style name="TextS10C6aWrap" parent="@style/layoutWrapContent">
        <item name="android:textSize">@dimen/textSize10</item>
        <item name="android:textColor">@color/color_drumall</item>
    </style>
    <!--//定义字体10sp，颜色#6a6a6a width=wrapcontent，height=wrapcontent-->
    <style name="TextS9C9aWrap" parent="@style/layoutWrapContent">
        <item name="android:textSize">@dimen/textSize9</item>
        <item name="android:textColor">@color/color9</item>
    </style>
    <!--定义字体颜色为1ebeec大小15sp，宽高度自适应-->
    <style name="TextS15C1ebeecLayoutWrap" parent="@style/layoutWrapContent">
        <item name="android:textSize">@dimen/textSize15</item>
        <item name="android:textColor">@color/color_homeTextColorSelect</item>
    </style>
    <!--定义字体颜色为33333大小15sp，宽高度自适应-->
    <style name="TextS15C3LayoutWrap" parent="@style/layoutWrapContent">
        <item name="android:textSize">@dimen/textSize15</item>
        <item name="android:textColor">@color/color_333333</item>
    </style>
    <!--//定义所有的宽高度都是wrap_content的布局-->
    <style name="layoutWrapContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!--数据请求动画-->
    <style name="dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/dialog</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <!--//定义所有的宽高度都是match_parent的布局-->
    <style name="layoutmatchparent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!--弹窗样式中心弹窗-->
    <style name="popup3_anim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/pop3_in</item>
        <item name="android:windowExitAnimation">@anim/pop3_out</item>
    </style>
    <!--弹窗样式:屏幕右边到左边-->
    <style name="popup4_anim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/pop4in</item>
        <item name="android:windowExitAnimation">@anim/pop4out</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <!--数据请求动画-->
    <style name="dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/dialog</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
</resources>
